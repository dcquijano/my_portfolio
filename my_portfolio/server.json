const { createServer } = require('http');
const { parse } = require('url');
const { spawn } = require('child_process');

createServer((req, res) => {
    const url = parse(req.url, true);
    
    // Route requests to your ASP.NET Core app
    const dotnetApp = spawn('dotnet', ['my_portfolio.dll']); // Replace with your actual ASP.NET Core app DLL

    dotnetApp.stdout.on('data', (data) => {
        res.write(data);
    });

    dotnetApp.stderr.on('data', (data) => {
        res.write(data);
    });

    dotnetApp.on('close', (code) => {
        res.end(`Child process exited with code ${code}`);
    });
}).listen(8080, () => {
    console.log('Server is running');
});
