@using Azure.Core
@model my_portfolio.Models.Messages

@{
    ViewData["Title"] = "Message";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />

<section class="contact-section">
    <div class="container">
        <h1 class="contact-title">Message</h1>
        <div class="row justify-content-center">
            <form class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-lg">
              
                <div class="mb-6">
                    <label asp-for="Name" class="block text-lg font-semibold text-gray-700"></label>
                    <input asp-for="Name" class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
                           placeholder="Enter your full name" required />
                    <span asp-validation-for="Name" class="text-red-600 mt-1 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Email" class="block text-lg font-semibold text-gray-700"></label>
                    <input asp-for="Email" class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
                           placeholder="Enter your email address" required />
                    <span asp-validation-for="Email" class="text-red-600 mt-1 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Subject" class="block text-lg font-semibold text-gray-700"></label>
                    <input asp-for="Subject" class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
                           placeholder="Enter subject" required />
                    <span asp-validation-for="Subject" class="text-red-600 mt-1 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Message" class="block text-lg font-semibold text-gray-700"></label>
                    <textarea asp-for="Message" class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
                              rows="4" placeholder="Write your message" required></textarea>
                    <span asp-validation-for="Message" class="text-red-600 mt-1 text-sm"></span>
                </div>


                <div>
                    <input type="submit" value="Message" class="w-full p-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none cursor-pointer" />
                </div>
            </form>

        </div>
</section>

<br />

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- SweetAlert2 CDN -->

    <script>
        Swal.fire({
            icon: 'success',
            title: 'Message Sent!',
            text: 'Your message has been sent successfully.',
            showConfirmButton: true
        });
    </script>
}


