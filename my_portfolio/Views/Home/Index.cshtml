@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="hero-text">Welcome to My Portfolio</h1>
                <h1 class="name-title">Darius Cumpio</h1>
                <p class="hero-subtext">
                    Currently, I am a 4th-year student pursuing my dream of becoming a web developer. I am a passionate developer, dedicated to creating innovative solutions in web development, both front-end and back-end.
                </p>
                <a asp-area="" asp-controller="Home" asp-action="Project" class="btn btn-primary btn-custom">View My Work</a>
            </div>
            <div class="col-md-6">
                <img src="~/img/img.jpg" alt="Hero Image" class="circle-image" />
            </div>
        </div>
    </div>
</section>