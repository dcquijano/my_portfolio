@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />

<section class="contact-section">
    <div class="container">
        <h1 class="contact-title">Contact Information</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-card">
                    <div class="contact-info">
                        <!-- Location Info -->
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="info-content">
                                <h3 class="info-label">Location</h3>
                                <p class="info-value">Cebu, City, Ph</p>
                            </div>
                        </div>

                        <!-- Email Info -->
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-content">
                                <h3 class="info-label">Email</h3>
                                <p class="info-value">dariuscumpio@gmail.com</p>
                            </div>
                        </div>

                        <!-- Phone Info -->
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="info-content">
                                <h3 class="info-label">Phone</h3>
                                <p class="info-value">+63 (955) 621-5414</p>
                            </div>
                        </div>

                        <!-- Working Hours -->
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="info-content">
                                <h3 class="info-label">Working Hours</h3>
                                <p class="info-value">Monday - Friday, 9:00 AM - 5:00 PM</p>
                            </div>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="social-links">
                        <a href="mailto:your.dariuscumpio@gmail.com" class="social-link email" title="Email">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <a href="https://github.com/dcquijano" class="social-link github" title="GitHub" target="_blank">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="https://www.facebook.com/iKyojin" class="social-link facebook" title="Facebook" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://linkedin.com/in/yourusername" class="social-link linkedin" title="LinkedIn" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>